{
  "compilerOptions": {
    "target": "es5",
    "isolatedModules": true,
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "lib": [
      "esnext",
      "dom",
      "es6"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "allowJs": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "test",
    "template"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  },
  "include": [
    "src"
  ]
}
